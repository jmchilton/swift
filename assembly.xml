<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>install</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>swift-3.0</baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <files>
        <file>
            <source>swift/launcher/target/launcher-3.0-SNAPSHOT-all.jar</source>
            <outputDirectory>bin/swift</outputDirectory>
            <destName>launcher.jar</destName>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>swift/core/target/swift-core-3.0-SNAPSHOT-all.jar</source>
            <outputDirectory>bin/swift</outputDirectory>
            <destName>swift.jar</destName>
            <fileMode>755</fileMode>
        </file>
        <file>
            <source>swift/web/target/swift-ui.war</source>
            <outputDirectory>bin/swift</outputDirectory>
            <destName>swift.war</destName>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory></outputDirectory>
            <includes>
                <include>edu.mayo.mprc:swift-scripts:jar:3.0-SNAPSHOT</include>
            </includes>
        </dependencySet>    
       <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory></outputDirectory>
            <includes>
                <include>edu.mayo.mprc:install:jar:3.0-SNAPSHOT</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory></outputDirectory>
            <includes>
                <include>edu.mayo.mprc:install-exe:jar:3.0-SNAPSHOT</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
