<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="edu.mayo.mprc.fastadb">
    <class name="ProteinSequence" table="protein_sequence">
        <id name="id" type="integer" column="protein_sequence_id">
            <generator class="native"/>
        </id>
        <property name="mass" type="double" column="mass"/>
        <property name="sequence" type="text" column="sequence"/>
    </class>
    <database-object>
        <create>ALTER TABLE `protein_sequence` ADD UNIQUE INDEX `sequence` USING HASH (`sequence`(200) ASC) ;</create>
        <drop>ALTER TABLE `protein_sequence` DROP INDEX `sequence` ;</drop>
        <dialect-scope name="org.hibernate.dialect.MySQLInnoDBDialect"/>
    </database-object>
</hibernate-mapping>